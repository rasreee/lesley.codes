{
  "private": true,
  "name": "lesley-codes",
  "homepage": "https://lesley.codes",
  "repository": "https://github.com/rasreee/lesley-codes",
  "scripts": {
    "dev": "next",
    "start": "next start",
    "typecheck": "tsc",
    "clean:dist": "rimraf .next yarn-error.log .contentlayer tsconfig.tsbuildinfo",
    "clean": "yarn clean:dist && rimraf node_modules && yarn cache clean",
    "build": "yarn clean:dist && yarn format && next build",
    "lint": "eslint --ignore-path .gitignore --cache --ext .js,.jsx,.ts,.tsx ./",
    "type-check": "tsc",
    "type-watch": "tsc --watch",
    "format": "prettier --write \"./**/*.{js,json,ts,tsx}\"",
    "analyze": "ANALYZE=true next build",
    "analyze:server": "BUNDLE_ANALYZE=server next build",
    "analyze:browser": "BUNDLE_ANALYZE=browser next build"
  },
  "dependencies": {
    "@supabase/supabase-js": "^1.29.0",
    "@tailwindcss/typography": "^0.5.0",
    "classnames": "2.3.1",
    "date-fns": "2.21.3",
    "fathom-client": "^3.2.0",
    "gray-matter": "4.0.3",
    "next": "latest",
    "next-seo": "^4.28.1",
    "next-themes": "^0.0.15",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remark": "13.0.0",
    "remark-html": "13.0.1",
    "swr": "^1.1.1",
    "use-delayed-render": "^0.0.7"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.0",
    "@types/react": "^17.0.6",
    "@types/react-dom": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "autoprefixer": "10.4.0",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-next": "^12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "globby": "^12.0.2",
    "lint-staged": "^12.1.3",
    "postcss": "8.4.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "tailwindcss": "3.0.5",
    "typescript": "^4.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{js,ts,tsx,md}": "prettier --write"
  }
}
